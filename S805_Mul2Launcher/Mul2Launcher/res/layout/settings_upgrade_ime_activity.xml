<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:screen_control_view="http://schemas.android.com/apk/res/com.sz.ead.framework.mul2launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	
    <com.sz.ead.framework.mul2launcher.status.Statusbar
        android:id="@+id/llyt_main_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.sz.ead.framework.mul2launcher.status.Statusbar>
    
	<TextView
	    android:id="@+id/setting_upgrade_ime_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="164dp"
	    android:text="@string/settings_upgrade_ime_version"
	    android:textSize="@dimen/size_30"
	    android:textColor="@color/settings_upgrade_text_color"/>
	<TextView 
	    android:id="@+id/setting_upgrade_ime_info"
	    android:layout_width="640dp"
	    android:layout_height="240dp"
	    android:layout_marginLeft="320dp"
	    android:layout_marginTop="256dp"
		android:textSize="@dimen/size_28"
		android:textColor="@color/settings_upgrade_text_color"
		android:lineSpacingExtra="18dp"
	    android:maxLines="5"/>
	<com.sz.ead.framework.mul2launcher.settings.upgrade.ScreenControlView
       android:id="@+id/idScreenControl"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="380dp"
       screen_control_view:circle_space="12dp"
       screen_control_view:circle_diameter="15dp"
       screen_control_view:focus_drawable="@drawable/settings_big_point"
       screen_control_view:other_drawable="@drawable/settings_small_point" />
	<ImageView 
        android:id="@+id/setting_upgrade_left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="314dp"
        android:layout_marginLeft="180dp"
        android:visibility="invisible"
        android:background="@drawable/settings_zoom_arrow_left"/>
	<ImageView 
        android:id="@+id/setting_upgrade_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="314dp"
        android:layout_marginLeft="1056dp"
        android:visibility="invisible"
        android:background="@drawable/settings_zoom_arrow_right"/>
	<Button
	    android:id="@+id/setting_upgrade_ime_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="592dp"
	    android:layout_centerHorizontal="true"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:focusable="true"
	    android:background="@drawable/settings_network_bt_bg"
	    android:text="@string/settings_upgrade_ime_button"
	    android:textSize="@dimen/size_32"
	    android:textColor="@color/settings_upgrade_button_f_color"/>
</RelativeLayout>
