<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  	    android:id="@+id/id_auto_fetch_ip_view"
  	    android:layout_width="match_parent"
		android:layout_height="match_parent">     	
  	
    <TextView 
	            android:id="@+id/id_setting_network_auto"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="420dp"
	            android:layout_marginTop="180dp"
	            android:focusable="true"
	            android:gravity="center"
	            android:textSize="@dimen/size_30"
	            android:background="@drawable/settings_network_tv_bg"
	            android:text="@string/settings_network_auto"/>
	
	<TextView 
	            android:id="@+id/id_setting_network_manual"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="180dp"
	            android:layout_toRightOf="@id/id_setting_network_auto"
	            android:focusable="true"
	            android:gravity="center"
	            android:textSize="@dimen/size_30"
	            android:background="@drawable/settings_network_tv_bg"
	            android:text="@string/settings_network_manual"/>
    
  	 </RelativeLayout>
