<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_wifipwd_view"
    android:layout_width="match_parent"
	android:layout_height="match_parent">   
  	
   <ImageView
        android:id="@+id/id_setting_network_wifi_pwd_bg" 
        android:layout_marginLeft="236dp"
        android:layout_marginTop="200dp"
        android:layout_width="820dp"     
        android:layout_height="70dp"
        android:src="@drawable/settings_network_wifi_refresh_unfocus"/>
	    
    <ImageView
        android:id="@+id/id_setting_wifi_pwd_lockImage" 
        android:layout_marginLeft="983dp"
        android:layout_marginTop="215dp"
        android:layout_width="40dp"     
        android:layout_height="40dp"
        android:src="@drawable/settings_network_wifi_lock_f"
        >
    </ImageView>
	    
	<TextView
	    android:id="@+id/id_setting_network_wifi_pwd_name"  
		android:layout_marginLeft="270dp"
		android:layout_marginTop="208dp"
		android:layout_height="57dp"     
		android:layout_width="450dp"     
		android:gravity="center_vertical|left"
		android:textSize="@dimen/size_28"
		android:textColor="@color/settings_menu_title_color">    
    </TextView> 
	    
	<ImageView     
        android:id="@+id/id_setting_network_wifi_pwd_signal" 
        android:layout_marginLeft="933dp"
        android:layout_marginTop="215dp"
        android:layout_width="40dp"     
        android:layout_height="40dp"
  	    android:src="@drawable/settings_network_wifi_wifi2_uf">
    </ImageView>
	    
	<TextView
	    android:id="@+id/id_setting_network_wifi_pwd"  
		android:layout_marginLeft="236dp"
		android:layout_marginTop="314dp"
		android:layout_height="60dp"     
		android:layout_width="229dp"     
		android:gravity="center_vertical|right"
		android:singleLine="true"
		android:textSize="@dimen/size_30"
		android:textColor="@color/settings_menu_title_color"
		android:text="@string/settings_network_wifi_password">
	   </TextView> 
	    
	<EditText
        android:id="@+id/id_setting_network_wifi_edit"
        style="@style/settings_wifi_pwd_edit"
        android:layout_marginLeft="478dp"
       	android:layout_marginTop="308dp"
    	android:layout_width="426dp"
    	android:layout_height="74dp"
    	android:paddingLeft="25dp"
    	android:imeOptions="actionDone"
   		android:gravity="center_vertical|left"
   		android:focusable="true"
        android:singleLine="true"  
        android:paddingRight="30dp"
        android:textColor="@color/settings_menu_title_color"
        android:textSize="@dimen/size_30"/>
		
	<Button 
	    android:id="@+id/id_setting_network_wifi_pwd_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="592dp"
        android:gravity="center"
        android:textColor="@drawable/settings_network_bt_text"
        android:textSize="@dimen/size_30"
        android:background="@drawable/settings_network_bt_bg"
        android:text="@string/settings_network_wifi_connct_wifi"/>
</RelativeLayout>